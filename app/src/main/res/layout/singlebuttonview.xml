<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singlebutton_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/singlebutton_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_2"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_3"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_4"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_5"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_6"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <TextView
        android:id="@+id/singlebutton_textview_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlebutton_textview_7"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="10pt" >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/singlebutton_pass_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/pass" >
        </Button>

        <Button
            android:id="@+id/singlebutton_false_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/falsed" >
        </Button>
    </LinearLayout>

</RelativeLayout>